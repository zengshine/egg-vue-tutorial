{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "es6",
      "dom",
      "es2017",
      "esnext"
    ],
    
    // 匹配webpack alias
    "paths": {
      "@web/*": ["./*"],
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue",
  ],
}
