{
  "files.exclude": {
    "USE_GITIGNORE": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.defaultFormatter": null,
  "editor.codeActionsOnSave": {
		"source.fixAll.stylelint": true
	},
  "cSpell.words": [
    "CERTDIR",
    "Dockerize",
    "Entrypoint",
    "Vuex",
    "Zeng",
    "bundlesize",
    "commitlint",
    "csrf",
    "easywebpack",
    "imagemini",
    "mkdir",
    "nounknow"
  ]
}
